extends layout

block vars
  - var footer = foot
  - var navig = nav

block content
    div.container-fluid
        div.thumbnail.pull-left
            img(src="img/product1.png")
        div
            h4 #{item.name}
            each par in item.descr
                p #{par}
            button.btn.btn-primary(onclick="location.href='/cart'")
                &euro; #{item.price} Order now!
