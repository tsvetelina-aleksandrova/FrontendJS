.mainNav
    nav.navbar.navbar-default
        div.container-fluid
            div.navbar-header
                button.navbar-toggle.collapsed(type="button", 
                 data-toggle="collapse", data-target="#main-nav-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                a.navbar-brand(href="/")
                    img(alt="Brand" src="img/logo.png")
            div.divider
            div#main-nav-collapse.collapse.navbar-collapse
                form.navbar-form.navbar-left(role="search")
                    div.form-group
                        input.form-control(type="text", placeholder="Search artists") 
                        span &nbsp
                        button.btn.btn-default.fa.fa-search.fa-lg(type="submit")
                ul.nav.navbar-nav.navbar-right
                    if username
                        li
                            a.fa.fa-home.fa-2x(href="/")
                        li
                            a.fa.fa-users.fa-lg(href="#")
                        
                        li.dropdown
                            a.dropdown-toggle(href="#", data-toggle="dropdown", 
                                role="button", aria-expanded="false") username
                                span.caret
                            ul.dropdown-menu(role="menu")
                                li
                                    a(href="#") Edit profile
                                li.divider
                                li
                                    a(href="#") Logout
                    else
                        li 
                            form#sign-in-nav-form
                                label Name: &nbsp
                                input(type="text")
                                label &nbsp Password: &nbsp
                                input(type="password")
                                span &nbsp
                                button.btn Sign in
                        li
                            a(href="/register") Register