.header
	header.navbar.navbar-default
		.navbar-header.hidden
			button.navbar-toggle.collapsed(type="button", 
			 data-toggle="collapse", data-target="#main-nav")
				span.sr-only Toggle navigation
				span.fa.fa-bars.btn.btn-default
			a.navbar-brand.brand-name(href="/") Moviebook
		#main-nav.collapse.navbar-collapse.hidden
			form.navbar-form.navbar-left#form-search(role="search")
				.input-group
					input.form-control(type="text", placeholder="Search movies", aria-describedby="basic-addon1") 
					span.btn.btn-default.input-group-addon(id="basic-addon1")
						i.fa.fa-search
			ul.nav.navbar-nav.navbar-right
				li
					a.fa.fa-home.fa-2x(href="/")
				li
					a.fa.fa-users.fa-lg(href="#")
				li.dropdown
					a.dropdown-toggle(href="#", data-toggle="dropdown", 
						role="button", aria-expanded="false") Username
						span.caret
					ul.dropdown-menu(role="menu")
						li
							a.view-profile(href="#", name=user) View profile
						li
							a.edit-profile(href="#", name=user) Edit profile
						li.divider
						li
							a#logout-elem(href="#") Logout
script(src="js/init.js")